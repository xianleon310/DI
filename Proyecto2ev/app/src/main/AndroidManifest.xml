<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebase2ev">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Firebase2EV"
        android:theme="@style/Theme.Firebase2EV">
        <activity
            android:name=".views.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Firebase2EV">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:exported="false"
            android:label="Register"
            android:parentActivityName=".views.LoginActivity" />
        <activity
            android:name=".views.DashboardActivity"
            android:exported="false"
            android:label="Dashboard" />
    </application>

</manifest>